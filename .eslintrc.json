{
  "root": true,
  "ignorePatterns": [
    "node_modules/",
    "/packages/core/src/",
    "/packages/core/bld/",
    "/packages/cli/src/",
    "/packages/cli/bld/",
    "/packages/utils/src/",
    "/packages/utils/bld/",
    "/packages/boilerplate-url/src/",
    "/packages/boilerplate-url/bld/",
    "/packages/boilerplate-url-resolver/src/",
    "/packages/boilerplate-url-resolver/bld/"
  ],
  "extends": ["plugin:@mufan/javascript"],
  "overrides": [
    {
      "files": "**/*.{js,mjs}",
      "parserOptions": {
        "sourceType": "module"
      }
    },
    {
      "files": "**/*.cjs",
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
